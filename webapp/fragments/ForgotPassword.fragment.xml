<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idconnectsapdialogbox_CL"
        class="boxContainer sapMPopover sapMIBar sapMHeader-CTX"
        title="{i18n>Changepass_CL}"
    >
        <customHeader>
            <Bar id="idBar_CL">
                <contentMiddle>
                    <FlexBox
                        id="flexboxHeader_CL"
                        alignItems="Baseline"
                        justifyContent="Center"
                        width="100%"
                    >
                        <Text
                            id="_idTxtSAPLog_CL"
                            text="{i18n>chngPass_Link_IV}"
                            class="sapMHeader-CTX1"
                        />
                    </FlexBox>
                </contentMiddle>
            </Bar>
        </customHeader>
        <content>
            <form:SimpleForm
                id="idconnecttosapDetailsForm_CL"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                emptySpanXL="1"
                emptySpanL="1"
                emptySpanM="1"
                emptySpanS="0"
                columnsXL="2"
                columnsL="2"
                columnsM="1"
            >
                <VBox
                    id="SAPlogonform1_CL"
                    class="connecttoSAPform sapUiMediumMargin"
                    width="80%"
                >
                    <Label
                        id="idUserID_CL"
                        text="{i18n>userID_Lbl_CL}"
                        class="sapUiTinyMarginTop"
                    />
                    <Input
                        id="idUserIDInput_CL"
                        placeholder="{i18n>userID_PlaceHldr_CL}"
                        width="100%"
                    />
                    <Label
                        id="idUserLabel_CL"
                        text="{i18n>RegNumb_Lbl_CL}"
                        class="sapUiTinyMarginTop"
                    />
                    <Input
                        id="idRegNumbInput_CL"
                        placeholder="{i18n>RegNumb_PlaceHldr_CL}"
                        width="100%"
                    />
                    <Label
                        id="idRepeatPasswordlabel_CL"
                        text="{i18n>NewPass_Lbl_CL}"
                        class="sapUiTinyMarginTop"
                    />
                    <Input
                        id="idPasswordInput_CL"
                        type="Password"
                        placeholder="{i18n>EnterNewPass_PlaceHldr_CL}"
                        width="100%"
                        enabled="true"
                    />
                    <Button
                        id="ChangePwd_CL"
                        text="{i18n>ChanPass_Btn_IV}"
                        type="Emphasized"
                        width="100%"
                        press="onUpdatePasswordPress"
                        class="sapUiTinyMarginTop"
                    />
                    <VBox
                        id="idvboxCancelBtn"
                        class="vboxCancelBtn"
                    >
                        <Button
                            id="IDbuttonchangepwcancel"
                            class="changePasswordCancelBtn"
                            text="{i18n>Cancel_Btn_IV}"
                            type="Transparent"
                            width="100%"
                            press="onCancelForgotPassword"
                        />
                    </VBox>
                </VBox>
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>
