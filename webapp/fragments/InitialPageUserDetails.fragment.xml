<core:FragmentDefinition
    xmlns:form="sap.ui.layout.form"
    xmlns:unified="sap.ui.unified"
    xmlns:vk="sap.ui.vk"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
>
    <Dialog
        id="idProfileDetails_InitialPage"
        title="Profile Details"
        class="userProfileDialog sapMPopover sapMIBar sapMHeader-CTX"
        contentWidth="25%"
        contentHeight="auto"
    >
        <customHeader>
            <Bar id="BarUserDetails_InitialPage">
                <contentLeft>
                    <Title
                        id="idPersonTileUserDetails_InitialPage"
                        text="Profile Detials:"
                    />
                </contentLeft>
                <contentRight>
                    <Button
                        id="iddeclineBtnUserDetails_InitialPage"
                        icon="sap-icon://decline"
                        type="Transparent"
                        press="onPressDeclineProfileDetails_InitialPage"
                        tooltip="Close"
                    />
                </contentRight>
            </Bar>
        </customHeader>
        <VBox
            id="idVBox1UserDetails_InitialPage"
            class="profileCard"
        >
            <Avatar
                id="idImageAccontDetailsAvatar_InitialPage"
                displayShape="Circle"
                displaySize="XL"
                class="profileAvatar"
            />
            <HBox id="idHBoxBtnsForDeleteUpdate_InitialPage">
                <Button
                    id="idBtnUploadImageforProfile_InitialPage"
                    text="Upload"
                    icon="sap-icon://upload"
                    press="onPressUploadProfilePic_InitialPage"
                    type="Transparent"
                    width="auto"
                />
                <Label
                    id="idEmptylabelforBtns_InitialPage"
                    width="1rem"
                />
                <Button
                    id="idBtnEditDetailsforProfile_InitialPage"
                    text="Edit"
                    icon="sap-icon://edit"
                    press="onPressEditProfileDetails_InitialPage"
                    type="Transparent"
                    width="auto"
                />
                <Button
                    id="idBtnSaveProfileDetails_InitialPage"
                    text="Save"
                    icon="sap-icon://save"
                    press="onPressSaveProfileDetails_InitialPage"
                    type="Transparent"
                    visible="false"
                    width="auto"
                />
                <Label
                    id="idEmptylabelforBtns123_InitialPage"
                    width="1rem"
                />
                <Button
                    id="idBtnDeleteImageforProfile_InitialPage"
                    text="Remove"
                    icon="sap-icon://delete"
                    press="onPressDeleteProfilePic_InitialPage"
                    type="Transparent"
                    width="auto"
                />
                <Button
                    id="idBtnCancelProfileDetails_InitialPage"
                    text="Cancel"
                    icon="sap-icon://decline"
                    press="onPressCancelProfileDetails_InitialPage"
                    type="Transparent"
                    visible="false"
                    width="auto"
                />
            </HBox>
            <VBox id="VBox2UserDetails_InitialPage">
                <form:SimpleForm
                    id="idSimplformProfileDetails_InitialPage"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    adjustLabelSpan="false"
                >
                    <HBox
                        id="idHBoxResourceIDProfileDetails_InitialPage"
                        alignContent="Center"
                    >
                        <Text
                            id="idResourceIDUserDetails_InitialPage"
                            text="User ID:"
                            width="4.5rem"
                            class="profileDetailItem"
                        />
                        <Text
                            id="idInpuTextUsrIDUserDetails_InitialPage"
                            text="{oUserModel_Initial>/Userid}"
                            class="profileDetailItem"
                        />
                    </HBox>
                    <HBox
                        id="idHBoxNameProfileDetails_InitialPage"
                        alignContent="Center"
                    >
                        <Text
                            id="idNameUserDetails_InitialPage"
                            text="Name:"
                            width="4.5rem"
                            class="profileDetailItem"
                        />
                        <Text
                            id="idInputTextResourceFirstame_InitialPage"
                            text="{oUserModel_Initial>/Firstname}"
                            class="profileDetailItem"
                        />
                        <Text
                            id="idEmptyText01FL_InitialPage"
                            width="0.3rem"
                        />
                        <Text
                            id="idInputTextResourceFLastname_InitialPage"
                            text="{oUserModel_Initial>/Lastname}"
                            class="profileDetailItem"
                        />
                        <Input
                            id="idFrontandInputFirstName_InitialPage"
                            value="{oUserModel_Initial>/Firstname}"
                            visible="false"
                            width="5rem"
                        />
                        <Label
                            id="idEmptyLable02FL_InitialPage"
                            width="0.5rem"
                        />
                        <Input
                            id="idFrontandInputLastName_InitialPage"
                            value="{oUserModel_Initial>/Lastname}"
                            visible="false"
                            width="5rem"
                        />
                    </HBox>
                    <HBox
                        id="idHBoxMobileProfileDetails_InitialPage"
                        alignContent="Center"
                    >
                        <Text
                            id="idMobileUserDetails_InitialPage"
                            text="Mobile:"
                            width="4.5rem"
                            class="profileDetailItem"
                        />
                        <Text
                            id="idInputUserphone_InitialPage"
                            text="{oUserModel_Initial>/Phonenumber}"
                            class="profileDetailItem"
                        />
                        <Input
                            id="idFrontandInputPhoneNumber_InitialPage"
                            value="{oUserModel_Initial>/Phonenumber}"
                            visible="false"
                        />
                    </HBox>
                    <HBox
                        id="idHBoxEmialProfileDetails_InitialPage"
                        alignContent="Center"
                    >
                        <Text
                            id="idEmailUserDetails_InitialPage"
                            text="Email:"
                            width="4.5rem"
                            class="profileDetailItem"
                        />
                        <Text
                            id="idInputEmailUserDetails_InitialPage"
                            text="{oUserModel_Initial>/Email}"
                            class="profileDetailItem"
                        />
                        <Input
                            id="idFrontandInputEmail_InitialPage"
                            value="{oUserModel_Initial>/Email}"
                            visible="false"
                        />
                    </HBox>
                </form:SimpleForm>
            </VBox>
        </VBox>
    </Dialog>
</core:FragmentDefinition>
