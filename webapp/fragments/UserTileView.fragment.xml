<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Popover
        id="idTileViewPopover"
        placement="Bottom"
        verticalScrolling="false"
        horizontalScrolling="false"
        contentWidth="auto"
        title="Select Tile View:"
        class="sapUiResponsivePadding"
    >
        <VBox id="idPopOverTileView" alignItems="Start">
            <Button
                id="idEnglishTileView"
                text="Large Icons"
                type="Transparent"
                press="onPressTileViewLargeIcons"
                width="auto"
            />
            <Button
                id="idHindiTileView"
                text="Medium Icons"
                type="Transparent"
                press="onPressTileViewMediumIcons"
                width="auto"
            />
            <Button
                id="idSpanishTileView"
                text="Small Icons"
                type="Transparent"
                press="onPressTileViewSmallIcons"
                width="auto"
            />
        </VBox>
    </Popover>
</core:FragmentDefinition>
