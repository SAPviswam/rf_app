<core:FragmentDefinition
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Popover
        id="idProfilePopover"
        placement="Bottom"
        verticalScrolling="false"
        horizontalScrolling="false"
        class="sapUiResponsivePadding"
        contentWidth="200px"
        title="User Profile:"
    >
        <form:SimpleForm
            id="idSimpleFormProfile"
            backgroundDesign="Solid"
        >
            <VBox id="idVBoxProfile">
                <HBox
                    id="idProfileHeaderHBox"
                    alignItems="Start"
                >
                    <Avatar
                        id="idProfileAvatar"
                        displaySize="XS"
                        tooltip="Profile"
                    />
                    <Label
                        id="idLabelEmptyInProfile"
                        width="1rem"
                    />
                    <VBox
                        id="idProfileInfoVBox"
                        alignItems="Start"
                    >
                        <Text
                            id="idProfileName"
                            text="{profile>/Name}"
                        />
                        <Link
                            id="idProfileNumber"
                            text="{profile>/Number}"
                        />
                    </VBox>
                </HBox>
                <VBox
                    id="idProfileOptionsVBox"
                    alignItems="Start"
                    class="onProfileOptions"
                >
                    <Button
                        id="idProfileButton"
                        icon="sap-icon://person-placeholder"
                        text="Account Details"
                        type="Transparent"
                        press="onProfilePressed"
                    />
                    <Button
                        id="idThemesButton"
                        icon="sap-icon://palette"
                        text="Themes"
                        type="Transparent"
                        press="onPressThemesResource"
                    />
                    <Button
                        id="idLanguageButton"
                        icon="sap-icon://translate"
                        text="Language"
                        type="Transparent"
                        press="onPressLanguageTransulation"
                    />
                    <Button
                        id="idTileViewButton"
                        icon="sap-icon://my-view"
                        text="Tile View"
                        type="Transparent"
                        press="onPressTileViewSettings"
                    />
                    <Button
                        id="idSignoutButton"
                        icon="sap-icon://log"
                        text="Sign Out"
                        type="Transparent"
                        press="onSignoutPressed"
                    />
                </VBox>
            </VBox>
        </form:SimpleForm>
    </Popover>
</core:FragmentDefinition>
