<core:FragmentDefinition
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Popover
        id="idPopoverUserDetails"
        placement="Bottom"
        verticalScrolling="false"
        horizontalScrolling="false"
        class="sapUiResponsivePadding sapMPopover sapMIBar sapMHeader-CTX"
        contentWidth="210px"
        title="Profile:"
    >
        <form:SimpleForm
            id="idSimpleFormUserdetails"
            backgroundDesign="Solid"
        >
            <VBox id="idVBoxUserdetails">
                <HBox
                    id="idUserDeatilsHBox"
                    alignItems="Start"
                >
                    <Avatar
                        id="idAvatarProfilePopoverImage"
                        displaySize="S"
                        press="onPressPopoverProfileImageAvatar"
                        class="profileAvatar1234"
                    />
                    <Label
                        id="idUserDeatilsLabel4"
                        width="1rem"
                    />
                    <VBox
                        id="idUserDeatilsVBox11"
                        alignItems="Start"
                    >
                        <Text
                            id="idUserDeatilsTextName"
                            text="{profile>/Name}"
                        />
                        <Link
                            id="idUserDeatilsPhoneLink"
                            text="{profile>/Number}"
                        />
                    </VBox>
                </HBox>
                <VBox
                    id="idUserDeatilsVBox12"
                    alignItems="Start"
                    class="onProfileOptions"
                >
                    <Button
                        id="idUserDeatilsButtonAccountDetails"
                        icon="sap-icon://person-placeholder"
                        text="Account Details"
                        type="Transparent"
                        press="onPressAccountDetails"
                        visible="{popoverModel>/showAccountDetails}"
                    />
                    <!-- <Button
                        id="idUserDeatilsButton1Edit"
                        icon="sap-icon://edit"
                        text="Edit Tile"
                        type="Transparent"
                        press="onEditTileNamePress"
                        visible="{popoverModel>/showEditTile}"
                    /> -->
                    <Button
                        id="idUserDeatilsButton3Seetings"
                        icon="sap-icon://settings"
                        text="Default Settings"
                        type="Transparent"
                        press="onResetToDefaultPress"
                        visible="{popoverModel>/showDefaultSettings}"
                    />
                    <Button
                        id="idUserDeatilsButton4Pallete"
                        icon="sap-icon://palette"
                        text="Themes"
                        type="Transparent"
                        press="onPressThemesBtnFromProfilePopover"
                        visible="{popoverModel>/showThemes}"
                    />
                    <!-- <Button
                        id="idUserDeatilsButton5Transulate"
                        icon="sap-icon://translate"
                        text="Language"
                        type="Transparent"
                        press="onPressLanguageTranslation"
                        visible="{popoverModel>/showLanguage}"
                    /> -->
                    <Button
                        id="idUserDeatilsButton6View"
                        icon="sap-icon://my-view"
                        text="Tile View"
                        type="Transparent"
                        press="onPressTileViewSettings"
                        visible="{popoverModel>/showTileView}"
                    />
                    <Button
                        id="idUserDeatilsButton7Help"
                        icon="sap-icon://sys-help"
                        text="Help"
                        type="Transparent"
                        press="onChatbotButtonPress"
                        visible="{popoverModel>/showHelp}"
                    />
                    <Button
                        id="idUserDeatilsButton8Logout"
                        icon="sap-icon://log"
                        text="Sign Out"
                        type="Transparent"
                        press="onSignoutPressed"
                        visible="{popoverModel>/showSignOut}"
                    />
                </VBox>
            </VBox>
        </form:SimpleForm>
    </Popover>
</core:FragmentDefinition>
