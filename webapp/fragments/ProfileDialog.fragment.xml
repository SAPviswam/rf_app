<core:FragmentDefinition
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Popover 
        placement="Bottom"
        verticalScrolling="false"
        horizontalScrolling="false"
        class="sapUiResponsivePadding sapMPopover sapMIBar sapMHeader-CTX"
        contentWidth="210px"
        title="Profile:"
    >
        <form:SimpleForm backgroundDesign="Solid">
            <VBox>
                <HBox alignItems="Start">
                    <Avatar id="idImageAvatarProfileDetails"
                        displaySize="S"
                        class="profileAvatar1234"
                        press="onPressPopoverProfileImageAvatar"
                    />
                    <Label width="1rem" />
                    <VBox alignItems="Start">
                        <Text text="{profile>/Name}" />
                        <Link text="{profile>/Number}" />
                    </VBox>
                </HBox>
                <VBox
                    alignItems="Start"
                    class="onProfileOptions"
                >
                    <Button
                        icon="sap-icon://person-placeholder"
                        text="Account Details"
                        type="Transparent"
                        press="onPressAccountDetails"
                        visible="{popoverModel>/showAccountDetails}"
                    />
                    <Button
                        icon="sap-icon://edit"
                        text="Edit Tile"
                        type="Transparent"
                        press="onEditTileNamePress"
                        visible="{popoverModel>/showEditTile}"
                    />
                    <Button
                        icon="sap-icon://settings"
                        text="Default Settings"
                        type="Transparent"
                        press="onResetToDefaultPress"
                        visible="{popoverModel>/showDefaultSettings}"
                    />
                    <Button
                        icon="sap-icon://palette"
                        text="Themes"
                        type="Transparent"
                        press="onPressThemesResource"
                        visible="{popoverModel>/showThemes}"
                    />
                    <Button
                        icon="sap-icon://translate"
                        text="Language"
                        type="Transparent"
                        press="onPressLanguageTranslation"
                        visible="{popoverModel>/showLanguage}"
                    />
                    <Button
                        icon="sap-icon://my-view"
                        text="Tile View"
                        type="Transparent"
                        press="onPressTileViewSettings"
                        visible="{popoverModel>/showTileView}"
                    />
                    <Button
                        icon="sap-icon://sys-help"
                        text="Help"
                        type="Transparent"
                        press="onChatbotButtonPress"
                        visible="{popoverModel>/showHelp}"
                    />
                    <Button
                        icon="sap-icon://log"
                        text="Sign Out"
                        type="Transparent"
                        press="onSignoutPressed"
                        visible="{popoverModel>/showSignOut}"
                    />
                </VBox>
            </VBox>
        </form:SimpleForm>
    </Popover>
</core:FragmentDefinition>
