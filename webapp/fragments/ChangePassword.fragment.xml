<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
      <Dialog
        id="idconnectsapdialogbox_CP"
        resizable="false"
        draggable="true"
        contentWidth="25%"
        class="boxContainer"
        initialFocus="idSPasswordInput_CP"
    >
        <customHeader>
            <Bar
                id="_IDBar1coonectsap_CP"
                class="TitlecustomHeader"
            >
                <contentLeft>
                    <!-- Logo -->
                    <Image
                        id="_IDGenImage_CP"
                        src="https://artihcus.com/assets/img/AG-logo.png"
                        width="85%"
                        height="60%"
                    />
                    </contentLeft>
                    <!-- Title -->
                    <contentMiddle>
                    <Title
                        id="_IDTitleconnectsap_CP"
                        text="CAPmodel RF"
                        class="capModelRFTextdialog"
                    />
                </contentMiddle>
            </Bar>
        </customHeader>
        <content>
            <form:SimpleForm
                id="idconnecttosapDetailsForm_CP"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                emptySpanXL="1"
                emptySpanL="1"
                emptySpanM="1"
                emptySpanS="0"
                columnsXL="2"
                columnsL="2"
                columnsM="1"
            >
                <VBox
                    id="SAPlogonform1_CP"
                    width="72%"
                    class="connecttoSAPform sapUiLargeMarginEnd sapUiLargeMarginBegin  sapUiSmallMarginTop" 
                >
                <VBox
                    id="SAPlogonform2_CP"
                    width="100%"
                    class="sapUiSmallMargin"
                >
                <VBox id="IDvboxchangePW" alignItems="Start">
                    <!-- User Input -->
                  
                    <Label
                        id="idUserLabel_C"
                        text="User"
                        ></Label>
                    <Input
                        id="idUserInput_CP"
                        value="{}"
                        placeholder=""
                        class="customInput"
                        width="105%"
                        editable="false"
                    />
                    <Label
                        id="idUserLabel_CP"
                        text="Current Password"
                        class="sapUiTinyMarginTop"
                        ></Label>
                    <Input
                        id="idSPasswordInput_CP"
                        type="Password"
                       
                        width="105%"
                    />
                        <Label
                            id="idNewPasswordlabel_CP"
                              text="New Password"
                           class="sapUiTinyMarginTop"  
                        />
                         <Input
                        id="idNewPasswordInput_CP"
                        type="Password"
                        width="105%"
                    />
                     <Label
                            id="idRepeatPasswordlabel_CP"
                              text="Repeat Password"
                             class="sapUiTinyMarginTop"
                        />
                         <Input
                        id="idRepeatPasswordInput_CP"
                        type="Password"
                        width="105%"
                    />

                    </VBox>
                      <Button
                            id="ChangePwd_CP"
                            text="Change Password"
                           type="Emphasized"

                            width="85%"
                            press="onChangePasswordPress"
                            class="sapUiTinyMarginTop"
                        />
 
                    <VBox id="IDvboxchnagePWbtn" alignItems="Center" alignContent="Center" class="VboxChangePassword">
                   
                        <Button id="IDbuttonchangepwcancel" text="Cancel"
                        type="Transparent"
                        width="100%"
                        press="onPressCancleSapLogonInChangePassword"/>
                        </VBox>
                      
                     
                    </VBox>
                    
                    </VBox>
            </form:SimpleForm>
        </content>
    </Dialog></core:FragmentDefinition>
