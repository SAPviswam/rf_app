<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idconnectsapdialogbox_CP"
        class="boxContainer sapMPopover sapMIBar sapMHeader-CTX"
        title="Change password"
    >
    <customHeader>
            <Bar>
                 <contentMiddle>
                    <FlexBox
                        id="flexboxHeader_CP"
                        alignItems="Baseline"
                        justifyContent="Center"
                        width="100%">
                        <Text id="_IDGenTextSAPLogon_CP" text="{i18n>chngPass_Link_IV}" class="sapMHeader-CTX1" />
                    </FlexBox>
                </contentMiddle>
            </Bar>
        </customHeader>
        <content>
            <form:SimpleForm
                id="idconnecttosapDetailsForm_CP"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                emptySpanXL="1"
                emptySpanL="1"
                emptySpanM="1"
                emptySpanS="0"
                columnsXL="2"
                columnsL="2"
                columnsM="1"
            >
                <VBox
                    id="SAPlogonform1_CP"
                    class="connecttoSAPform sapUiMediumMargin"
                    width="80%"
                >
                    <Label
                        id="idUserLabel_C"
                        text="{i18n>User_Lbl_IV}"
                    />
                    <Input
                        id="idUserInput_CP"
                        value="{}"
                        placeholder=""
                        class="customInput"
                        width="100%"
                        editable="false"
                    />
                    <Label
                        id="idUserLabel_CP"
                        text="{i18n>CurrPass_Lbl_IV}"
                        class="sapUiTinyMarginTop"
                    />
                    <Input
                        id="idSPasswordInput_CP"
                        type="Password"
                        width="100%"
                    />
                    <Label
                        id="idNewPasswordlabel_CP"
                        text="{i18n>NewPassword_Lbl_IV}"
                        class="sapUiTinyMarginTop"
                    />
                    <Input
                        id="idNewPasswordInput_CP"
                        type="Password"
                        width="100%"
                    />
                    <Label
                        id="idRepeatPasswordlabel_CP"
                        text="{i18n>ConfPass_Lbl_IV}"
                        class="sapUiTinyMarginTop"
                    />
                    <Input
                        id="idRepeatPasswordInput_CP"
                        type="Password"
                        width="100%"
                    />

                    <Button
                        id="ChangePwd_CP"
                        text="{i18n>ChanPass_Btn_IV}"
                        type="Emphasized"
                        width="100%"
                        press="onChangePasswordPress"
                        class="sapUiTinyMarginTop"
                    />
                    <VBox
                        id="idvboxCancelBtn"
                        class="vboxCancelBtn"
                    >
                        <Button
                            id="IDbuttonchangepwcancel"
                            class="changePasswordCancelBtn"
                            text="{i18n>Cancel_Btn_IV}"
                            type="Transparent"
                            press="onPressCancleSapLogonInChangePassword"
                        />
                    </VBox>
                </VBox>
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>
