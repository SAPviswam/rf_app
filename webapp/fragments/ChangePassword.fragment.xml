<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idconnectsapdialogbox_CP"
        class="boxContainer sapMPopover sapMIBar sapMHeader-CTX"
        title="change password"
    >
        <content>
            <form:SimpleForm
                id="idconnecttosapDetailsForm_CP"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                emptySpanXL="1"
                emptySpanL="1"
                emptySpanM="1"
                emptySpanS="0"
                columnsXL="2"
                columnsL="2"
                columnsM="1"
            >
                <VBox
                    id="SAPlogonform1_CP"
                    class="connecttoSAPform sapUiMediumMargin"
                    width="80%"
                >
                    <Label
                        id="idUserLabel_C"
                        text="User"
                    />
                    <Input
                        id="idUserInput_CP"
                        value="{}"
                        placeholder=""
                        class="customInput"
                        width="100%"
                    />
                    <Label
                        id="idUserLabel_CP"
                        text="Current Password"
                        class="sapUiTinyMarginTop"
                    />
                    <Input
                        id="idSPasswordInput_CP"
                        type="Password"
                        width="100%"
                    />
                    <Label
                        id="idNewPasswordlabel_CP"
                        text="New Password"
                        class="sapUiTinyMarginTop"
                    />
                    <Input
                        id="idNewPasswordInput_CP"
                        type="Password"
                        width="100%"
                    />
                    <Label
                        id="idRepeatPasswordlabel_CP"
                        text="Confirm Password"
                        class="sapUiTinyMarginTop"
                    />
                    <Input
                        id="idRepeatPasswordInput_CP"
                        type="Password"
                        width="100%"
                    />

                    <Button
                        id="ChangePwd_CP"
                        text="Change Password"
                        type="Emphasized"
                        width="100%"
                        press="onChangePasswordPress"
                        class="sapUiTinyMarginTop"
                    />
                    <VBox
                        id="idvboxCancelBtn"
                        class="vboxCancelBtn"
                    >
                        <Button
                            id="IDbuttonchangepwcancel"
                            class="changePasswordCancelBtn"
                            text="Cancel"
                            type="Transparent"
                            press="onPressCancleSapLogonInChangePassword"
                        />
                    </VBox>
                </VBox>
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>
