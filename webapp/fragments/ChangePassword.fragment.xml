<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
      <Dialog
        id="idconnectsapdialogbox_CP"
        resizable="false"
        draggable="true"
        contentWidth="25%"
        class="boxContainer"
          showHeader="false"
    >
    <VBox class="B25" alignItems="Center">
    <Image
        id="_IDGenImage_CP"
        src="https://artihcus.com/assets/img/AG-logo.png"
        width="25%"
        height="10%"
        class="sapUiSmallMarginBegin"
     
    />
    <VBox alignContent="Start" alignItems="Start" >
    <Title
        id="_IDTitleconnectsap_CP"
        text="CAPmodel RF"
        class="capModelRFTextdialog sapUiTinyMarginBottom"
    />
    </VBox>
</VBox>
           
        <content>
            <form:SimpleForm
                id="idconnecttosapDetailsForm_CP"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                emptySpanXL="1"
                emptySpanL="1"
                emptySpanM="1"
                emptySpanS="0"
                columnsXL="2"
                columnsL="2"
                columnsM="1"
            >
                <VBox
                    id="SAPlogonform1_CP"
                    width="72%"
                    class="connecttoSAPform sapUiLargeMarginEnd sapUiLargeMarginBegin  sapUiSmallMarginTop" 
                >
                <VBox
                    id="SAPlogonform2_CP"
                    width="100%"
                    class="sapUiSmallMargin"
                >


                <VBox alignItems="Start">
                    <!-- User Input -->
                  
                    <Label
                        id="idUserLabel_C"
                        text="User"
                        ></Label>
                    <Input
                        id="idUserInput_CP"
                        value="{}"
                        placeholder=""
                        class="customInput"
                        width="105%"
                    />
                    <Label
                        id="idUserLabel_CP"
                        text="Current Password"
                        class="sapUiTinyMarginTop"
                        ></Label>
                    <Input
                        id="idSPasswordInput_CP"
                        type="Password"
                       
                        width="105%"
                    />
                        <Label
                            id="idNewPasswordlabel_CP"
                              text="New Password"
                           class="sapUiTinyMarginTop"  
                        />
                         <Input
                        id="idNewPasswordInput_CP"
                        type="Password"
                        width="105%"
                    />
                     <Label
                            id="idRepeatPasswordlabel_CP"
                              text="Repeat Password"
                             class="sapUiTinyMarginTop"
                        />
                         <Input
                        id="idRepeatPasswordInput_CP"
                        type="Password"
                        width="105%"
                    />

                    </VBox>
                      <Button
                            id="ChangePwd_CP"
                            text="Change Password"
                           type="Emphasized"
                            width="85%"
                            press="onLogOnPress"
                             class="sapUiTinyMarginTop"
                        />
 
                    <VBox alignItems="Center" alignContent="Center" class="VboxChangePassword">
                   
                        <Button text="Cancel"
                        type="Transparent"
                        press="onPressCancleSapLogonInChangePassword"/>
                        </VBox>
                      
                     
                    </VBox>
                    
                    </VBox>
            </form:SimpleForm>
        </content>
    </Dialog></core:FragmentDefinition>
