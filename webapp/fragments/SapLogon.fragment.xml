<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Dialog
        id="idconnectsapdialogbox_CS"
        resizable="false"
        draggable="false"
        contentWidth="35%"
        class="boxContainer sapMPopover sapMIBar sapMHeader-CTX"
        initialFocus="idUserInput_CS"
    >
        <customHeader>
            <Bar>
                 <contentMiddle>
                    <FlexBox
                        id="flexboxHeader"
                        alignItems="Baseline"
                        justifyContent="Center"
                        width="100%">
                        <Text id="_IDGenTextSAPLogon" text="{i18n>SAPCon_Txt_IV}" class="sapMHeader-CTX1" />
                    </FlexBox>
                </contentMiddle>
                    <contentRight>
                    <Button
                        id="CancelButton_Header"
                        icon="sap-icon://sys-cancel"
                        type="Transparent"
                        tooltip="{i18n>close_Ttip_IV}"
                        press="onPressCancleSapLogon"
                    />
                </contentRight>
            </Bar>
        </customHeader>
        <content>
            <form:SimpleForm
                id="idconnecttosapDetailsForm_CS"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                emptySpanXL="1"
                emptySpanL="1"
                emptySpanM="1"
                emptySpanS="0"
                columnsXL="2"
                columnsL="2"
                columnsM="1"
            >
                <VBox
                    id="SAPlogonform1"
                    width="100%"
                    class="vboxSapLagon"
                    alignContent="Center"
                >
                    <Input
                        id="idUserInput_CS"
                        value="{}"
                        placeholder="{i18n>user_PlaceHldr}"
                        width="100%"
                    />
                    <!-- Password Input -->
                    <Input
                        id="idSPasswordInput_CS"
                        type="Password"
                        placeholder="{i18n>pswrd_PlaceHldr_IV}"
                        width="100%"
                    />
                    <Label
                        id="idLableInstanceNumber_CS"
                        text="{i18n>lan_Txt_IV}"
                        width="110%"
                    />
                <ComboBox
                        id="idLanguageSelectorMultiComboBox_CS"
                        width="100%"
                        selectedKey="en"
                        class="customInput"
                        change="onLanguageChange"
                    >
                    <items>
                        <core:Item
                            id="idCoreItem1"
                            key="en"
                            text="English"
                        />
                        <core:Item
                            id="idCoreItem2"
                            key="de"
                            text="German"
                        />
                    </items>
                     </ComboBox>
                    <Input
                        id="idRouterStringInput_CS"
                        value="100"
                        placeholder=""
                        width="100%"
                        editable="false"
                    />
                    <Button
                        id="LoginButton_CS"
                        text="{i18n>logOn_Txt_IV}"
                        width="100%"
                        type="Emphasized"
                        press="onLogOnPress"
                        class="sapUiTinyMarginTop logonButtonInSapLogon"
                    />
                    <HBox justifyContent="Center">
                        <Link
                            id="IDchangePassword"
                            text="{i18n>chngPass_Link_IV}"
                            class="sapUiSmallMarginTop"
                            press="onChangePasswordBtn"
                        />
                        <!-- <Link
                            id="IDlogoncancelbutton"
                            text="Cancel"
                            class="sapUiSmallMarginTop"
                            press="onPressCancleSapLogon"
                        /> -->
                    </HBox>
                </VBox>
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>
