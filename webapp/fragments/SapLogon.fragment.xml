<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Dialog
        id="idconnectsapdialogbox_CS"
        resizable="false"
        draggable="false"
        contentWidth="35%"
        class="boxContainer sapMPopover sapMIBar sapMHeader-CTX"
        initialFocus="idUserInput_CS"
        title="SAP Connection"
    >
       
       
        <content>
            <form:SimpleForm
            
                id="idconnecttosapDetailsForm_CS"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                emptySpanXL="1"
                emptySpanL="1"
                emptySpanM="1"
                emptySpanS="0"
                columnsXL="2"
                columnsL="2"
                columnsM="1"
            >
                <VBox
                    id="SAPlogonform1"
                     width="100%"
                     class="vboxSapLagon"
                   alignContent="Center"
                  
             
                >
       
<Input
                        id="idUserInput_CS"
                        value="{}"
                        placeholder="User"
        width="100%"
                    />
   <!-- Password Input -->
                    <Input
                        id="idSPasswordInput_CS"
                        type="Password"
                        placeholder="Password"
                         width="100%"
                    />
                        <Label
                            id="idLableInstanceNumber_CS"
                            text="Language"
                            width="110%"
                        />
                  <ComboBox
                            id="idLanguageSelectorMultiComboBox_CS"
                             width="100%"
                            selectedKey="en"
                            class="customInput"
                           
                        >
                            <items>
                                <core:Item
                                    id="idCoreItemEnglishLanguage_CS"
                                    key="en"
                                    text="EN-English"
                                />
                                <core:Item
                                    id="idCoreItemSpanishLanguage_CS"
                                    key="es"
                                    text="SP-Spanish"
                                />
                            </items>
                        </ComboBox>
  <Input
                        id="idRouterStringInput_CS"
                        value="400"
                        placeholder=""
                        
                        width="100%"
                        editable="false"
                    />
                     <Button
                            id="LoginButton_CS"
                            text="Log On"
                            width="100%"
                            type="Emphasized"
                            press="onLogOnPress"
                            class="sapUiTinyMarginTop"
                        />
                    <HBox  justifyContent="SpaceBetween">
                   
                   
                        <Link
                        id="IDchangePassword"
                        text="Change Password"
                
                        press="onChangePasswordBtn"
                        />
                        
                        <Link id="IDlogoncancelbutton"
                        text="Cancel"
                      
                        press="onPressCancleSapLogon"
                        
                       />
                        </HBox>
                                                                
                    </VBox>
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>
 
 