<core:FragmentDefinition
    xmlns:unified="sap.ui.unified"
    xmlns:vk="sap.ui.vk"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
>
    <Dialog
        id="idProfileDetailsDailogBox"
        title="Profile Details"
        class="userProfileDialog"
        contentWidth="25%"
        contentHeight="68%"
    >
        <customHeader>
            <Bar id="BarUserDetails_ResourcePage">
                <contentLeft>
                    <Title
                        id="PersonTileUserDetails_ResourcePage"
                        text="Profile Detials:"
                    />
                </contentLeft>
                <contentRight>
                    <!-- <unified:FileUploader
                        id="idProfileImageFileUploader"
                        buttonText=" "
                        icon="sap-icon://camera"
                        fileType="jpg,png,jpeg"
                        change="onFileUploadForProfileImage"
                        placeholder="Only allowes:jpg,png,jpeg"
                        buttonOnly="true"
                        visible="true"
                    />
                    <Button
                        id="idSaveBtnUserProfilePicture"
                        text="Save"
                        press="onPressSaveUserProfileImage"
                        visible="true"
                    /> -->
                    <Button
                        id="declineBtnUserDetails_ResourcePage"
                        icon="sap-icon://decline"
                        type="Transparent"
                        press="onPressDeclineProfileDetailsDailog"
                    />
                </contentRight>
            </Bar>
        </customHeader>
        <VBox
            id="VBox1UserDetails_ResourcePage"
            class="profileCard"
        >
            <Avatar
                id="idUserProfileImage"
                displayShape="Circle"
                displaySize="XL"
                class="profileAvatar"
            />
            <HBox id="idHBoxBtnsForDeleteUpdate">
                <Button
                    id="idBtnUploadImageforProfile"
                    text="Upload"
                    icon="sap-icon://upload"
                    press="onPressUploadProfilePic"
                    type="Transparent"
                />
                <Label
                    id="idEmptylabelforBtns"
                    width="1.3rem"
                />
                <Button
                    id="idBtnDeleteImageforProfile"
                    text="Delete"
                    icon="sap-icon://delete"
                    press="onPressDeleteProfilePic"
                    type="Transparent"
                />
            </HBox>
            <VBox
                id="VBox2UserDetails_ResourcePage"
                class="profileDetails"
            >
                <HBox id="idHBox1UserDetails_ResourcePage">
                    <VBox
                        id="VBox3UserDetails_ResourcePage"
                        alignItems="End"
                    >
                        <Text
                            id="idResourceIDUserDetails_ResourcePage"
                            text="Resource ID:"
                            class="profileDetailItem"
                        />
                        <Text
                            id="idNameUserDetails_ResourcePage"
                            text="Name:"
                            class="profileDetailItem"
                        />
                        <Text
                            id="idMobileUserDetails_ResourcePage"
                            text="Mobile:"
                            class="profileDetailItem"
                        />
                        <Text
                            id="idEmailUserDetails_ResourcePage"
                            text="Email:"
                            class="profileDetailItem"
                        />
                        <Text
                            id="idDisegnetionUserDetails_ResourcePage"
                            text="Disegnation:"
                            class="profileDetailItem"
                        />
                    </VBox>
                    <Text
                        id="idEmptyTextUserDetails_ResourcePage"
                        width="0.7rem"
                    />
                    <VBox
                        id="idVBox4UserDetails_ResourcePage"
                        alignItems="Start"
                    >
                        <Text
                            id="idInpuTextUsrIDUserDetails_ResourcePage"
                            text="{oUserModel>/Resourceid}"
                            class="profileDetailItem"
                        />
                        <Text
                            id="idinputTextResouname_ResourcePage"
                            text="{oUserModel>/Resourcename}"
                            class="profileDetailItem"
                        />
                        <Text
                            id="idInputUserphone_ResourcePage"
                            text="{oUserModel>/Phonenumber}"
                            class="profileDetailItem"
                        />
                        <Text
                            id="idInputEmailUserDetails_ResourcePage"
                            text="{oUserModel>/Email}"
                            class="profileDetailItem"
                        />
                        <Text
                            id="idinputResourceTypeUserDetails_ResourcePage"
                            text="{oUserModel>/Resourcetype}"
                            class="profileDetailItem"
                        />
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </Dialog>
</core:FragmentDefinition>
