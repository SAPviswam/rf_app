<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Popover
        id="idThemePopover"
        placement="Bottom"
        verticalScrolling="false"
        horizontalScrolling="false"
        title="Select Theme:"
        class="sapUiResponsivePadding"
    >
        <VBox id="idPopOverTheme" alignItems="Start">
            <Button
                id="idBackGroudTheme"
                text="Background"
                type="Transparent"
                press="onBackGroudThemeSelect"
            />
            <Button
                id="idHindiTheme"
                text="Tile Theme"
                type="Transparent"
                press="onTileThemeSelect"
            />
        </VBox>
    </Popover>
</core:FragmentDefinition>
