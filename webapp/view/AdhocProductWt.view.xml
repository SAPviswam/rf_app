<mvc:View
    xmlns:table="sap.ui.table"
    controllerName="com.app.rfapp.controller.AdhocProductWt"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:ndc="sap.ndc"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    height="100%"
>
    <tnt:ToolPage id="idToolPageAdhocProductwt">
        <tnt:header>
            <tnt:ToolHeader id="idtntToolHeaderAdhocProductwt">
                <Button
                    id="idBackButtoninAdhocProductWtScan"
                    icon="sap-icon://nav-back"
                    press="onPressBackButtoninAdhocProductWtProductScan"
                    visible="false"
                />
                <Button
                    id="idBackButtoninAdhocProductWtProductDetails"
                    icon="sap-icon://nav-back"
                    press="onPressBackButtoninAdhocProductWtProductDetails"
                    visible="false"
                />
                <Image
                    id="_IDGenImage1AdhocProductwt"
                    height="1.5rem"
                    class="sapUiSmallMarginBegin"
                    src="https://artihcus.com/assets/img/AG-logo.png"
                />
                <tnt:ToolHeaderUtilitySeparator
                    id="idToolHeaderUtilitySeparatorAdhocProductwt"
                />
                <ToolbarSpacer id="idToolbarSpacerAdhocProductwt">
                    <layoutData>
                        <OverflowToolbarLayoutData
                            id="idOverflowToolbarLayoutDataAdhocProductwt"
                            priority="NeverOverflow"
                            minWidth="20px"
                        />
                    </layoutData>
                </ToolbarSpacer>
                <Avatar
                    id="_IDGenAvatar1AdhocProductwt"
                    displaySize="XS"
                    press="onAvatarPressed"
                    tooltip="Profile"
                />
            </tnt:ToolHeader>
        </tnt:header>
        <tnt:mainContents>
            <ScrollContainer
                id="Id_ScrollContainer_AdhocProductWt"
                horizontal="false"
                vertical="true"
                height="100%"
                class="sapUiContentPadding"
                visible="true"
            >
                <VBox
                    id="idVbox_AdhocProductWt"
                    alignContent="Center"
                    alignItems="Center"
                >
                    <form:SimpleForm
                        id="Id_SimpleForm_AdhocProductWt"
                        layout="ResponsiveGridLayout"
                        labelSpanL="4"
                        labelSpanM="4"
                        emptySpanL="1"
                        emptySpanM="1"
                        columnsL="2"
                        columnsM="1"
                    >
                        <HBox
                            id="idHbox_AdhocProductWt"
                            alignContent="Center"
                            alignItems="Center"
                            justifyContent="Center"
                        >
                            <Text
                                id="Id_Text1_AdhocProductWt"
                                text="{i18n>Queue_Label_AdhocProductWt}"
                                width="50px"
                                class="sapUiTinyMarginEnd"
                            />
                            <Input
                                id="Id_Input1_AdhocProductWt"
                                value=""
                                liveChange="onAdhocProductWtLiveChange"
                                placeholder="{i18n>idAdhocProductWtWhInputPlaceholder}"
                            />
                        </HBox>
                        <HBox
                            id="idHbox_AdhocProductWt1"
                            justifyContent="Center"
                            alignContent="Center"
                            alignItems="Center"
                        >
                            <ndc:BarcodeScannerButton
                                id="IDBinGenScanButton_AdhocProductWt"
                                scanSuccess="OnScannerAdhocProductWt"
                                scanFail="onScanError"
                                dialogTitle="{i18n>idProductGenScanButton_AdhocProductWt}"
                            />
                            <Button
                                id="Id_Button1_AdhocProductWt"
                                text="{i18n>Back_Button_AdhocProductWt}"
                                press="onAdhocProductWtBackBtnPress"
                                visible="true"
                                type="Emphasized"
                                class="sapUiSmallMarginBegin"
                            />
                            <Button
                                id="asdfgytrdsxcvbh"
                                text="submit"
                                class="sapUiSmallMarginBegin"
                                press="onPressSubmitInAdhocHuWt"
                            />
                        </HBox>
                    </form:SimpleForm>
                </VBox>
            </ScrollContainer>
            <ScrollContainer
                id="idProductDetails"
                horizontal="false"
                vertical="true"
                height="100%"
                class="sapUiContentPadding"
                visible="false"
            >
                <!-- Vertical Box Layout for Content Alignment -->
                <VBox class="sapUiSmallMargin">
                    <!-- Horizontal Box for HU Number Field -->
                    <HBox
                        alignItems="Center"
                        class="sapUiSmallMarginBottom"
                    >
                        <Label
                            id="idAdhocProductScanLabel"
                            text="Product"
                            labelFor="idHuNumberInput"
                            class="sapUiTinyMarginEnd"
                            width="100px"
                        />
                        <Input
                            id="idAdhocProductNumberInput"
                            placeholder="Enter Product..."
                            maxLength="30"
                            width="250px"
                            editable="false"
                        />
                    </HBox>

                    <!-- Horizontal Box for SRC Bin Field -->
                    <HBox
                        alignItems="Center"
                        class="sapUiSmallMarginBottom"
                    >
                        <Label
                            id="idAdhocProductSRCBinLabel"
                            text="SRC Bin"
                            class="sapUiTinyMarginEnd"
                            width="100px"
                        />
                        <Input
                            id="idAdhocProductSRCBinInput"
                            placeholder="Enter SRC Bin..."
                            maxLength="25"
                            width="250px"
                            editable="false"
                        />
                    </HBox>

                    <!-- Horizontal Box for Destination Bin Field -->
                    <HBox
                        alignItems="Center"
                        class="sapUiSmallMarginBottom"
                    >
                        <Label
                            id="idAdhocProductDestBinLabel"
                            text="Destination Bin"
                            labelFor="idDestBinInput"
                            class="sapUiTinyMarginEnd"
                            width="100px"
                        />
                        <Input
                            id="idAdhocProductDestBinInput"
                            placeholder="Enter Dest Bin..."
                            maxLength="25"
                            width="250px"
                        />
                    </HBox>

                    <!-- Horizontal Box for Destination HU Field -->
                    <HBox
                        alignItems="Start"
                        class="sapUiSmallMarginBottom sapUiSmallMarginLeft "
                    >
                        <Label
                            id="idAdhocProductDestHuLabel"
                            text="Destination HU"
                            labelFor="idDestHuInput"
                            class="sapUiTinyMarginEnd"
                            width="100px"
                        />
                        <Input
                            id="idAdhocProductDestHuInput"
                            placeholder="Enter Dest HU..."
                            maxLength="25"
                            width="250px"
                        />
                    </HBox>

                    <!-- HU Content Button aligned to the left -->
                    <HBox
                        justifyContent="Start"
                        class="sapUiSmallMarginBottom"
                    >
                        <Button
                            id="idAdhocProductHuContentButton"
                            text="HU Content"
                            press="onHUContentPress"
                            class="sapUiTinyMarginEnd"
                        />
                    </HBox>
                </VBox>
            </ScrollContainer>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>
