<mvc:View
    xmlns:unified="sap.ui.unified"
    xmlns:form="sap.ui.layout.form"
    controllerName="com.app.rfapp.controller.Home"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:ndc="sap.ndc"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    height="100%"
    xmlns:layout="sap.ui.layout"
    xmlns:cssgrid="sap.ui.layout.cssgrid"
>
    <tnt:ToolPage id="pageHome">
        <tnt:header>
            <tnt:ToolHeader id="idtntpageHome">
                <Button
                    id="idBackBtnInPageHome"
                    icon="sap-icon://nav-back"
                    press="onBackBtnInHomePage"
                    visible="true"
                />
                <Image
                    id="id_GenImage1PageHome"
                    height="1.5rem"
                    class="sapUiTinyMarginBegin"
                    src="https://artihcus.com/assets/img/AG-logo.png"
                />
                <Title
                    id="Homescreentitle"
                    text="CAPmodel RF"
                    class="title"
                />
                <tnt:ToolHeaderUtilitySeparator
                    id="idToolHeaderUtilitySeparatorPageHome"
                />
                <ToolbarSpacer id="idToolbarSpacerPageHomePageHome">
                    <layoutData>
                        <OverflowToolbarLayoutData
                            id="idOverflowToolbarLayoutData1PageHome"
                            priority="NeverOverflow"
                            minWidth="20px"
                        />
                    </layoutData>
                </ToolbarSpacer>
                <Avatar
                    id="id_GenAvatar1PageHome"
                    displaySize="XS"
                    press="onHomePageAvatarPressed"
                    tooltip="Profile"
                />
            </tnt:ToolHeader>
        </tnt:header>

        <tnt:mainContents>
            <ScrollContainer
                id="idScrollContainer1_HomeView"
                horizontal="false"
                vertical="true"
                height="100%"
                class="sapUiContentPadding"
                visible="true"
            >
                <VBox
                    id="IdMainVbox_HomeView"
                    class="configTextVbox sapUiLargeMargin"
                >
                    <!-- vbox for subtitle "Configure SAP System" -->
                    <VBox class="configtitle">
                        <Title
                            id="IdSubTitle_HomeView"
                            class="configSubTitle"
                        />
                    </VBox>

                    <!-- hbox for gif and input fields -->
                    <HBox id="idMainContentHBox_HomeView" justifyContent="Center" alignItems="Center">
                        
                        <!-- VBox for the GIF on the left side -->
                        <VBox id="idVBoxGif_HomeView" width="50%" alignItems="Center" justifyContent="Center">
                            <html:img
                                id="idGif_HomeView"
                                src="https://i.postimg.cc/T3f7VXg2/original-9a173a2b6a9bf5aa8bfe43a0abb9dfff-2.gif"
                                style="width:650px; height:400px; max-width:800%;"
                                class="responsiveGif"
                            />
                        </VBox>
                        
                        <!-- VBox for the input fields on the right side -->
                        <VBox id="idVBoxInputFields_HomeView" width="50%" alignItems="End" class ="ConfigBtnsHbox">
                         <Title text="RF Login" class="RFLoginText" textAlign="Initial" level="H2" />
                            <!-- Labels and Inputs for Warehouse No and Resource -->
                            <HBox id="idhboxFields_HomeView">
                                <VBox>
                                    <Label
                                        id="idLabelHU"
                                        text="Warehouse No:"
                                        labelFor="idHUInput"
                                        class="LabelHomePage"
                                    />
                                    <Label
                                        id="idLabelUserID"
                                        text="Resource:"
                                        labelFor="idUserIDInput"
                                        class="sapUiSmallMarginTop LabelHomePage"
                                    />
                                </VBox>
                                <Text
                                    id="idtext"
                                    width="0.4rem"
                                />
                                <VBox>
                                    <MultiInput
                                        id="idHUInput"
                                        width="7rem"
                                        value="1710"
                                        editable="true"
                                    />
                                    <Input
                                        id="idUserIDInput"
                                        width="7rem"
                                    />
                                </VBox>
                            </HBox>
                            
                            <!-- hbox for auto-save checkbox and next button -->
                            <HBox
                                id="_IDGenHBox69"
                                alignItems="Start"
                            >
                                <CheckBox
                                    id="_IDGenCheckBox"
                                    text="Auto Save"
                                    select="onSelectCheckBox"
                                />
                                <Button
                                    text="Next"
                                    type="Emphasized"
                                    press="onPressConnectButton"
                                    class="checkBoxforAutosave"
                                />
                            </HBox>
                            
                            <!-- hbox for create resource and change queue buttons -->
                            <HBox
                                id="idHBoxForgot"
                                justifyContent="Center"
                                alignItems="Center"
                                class="sapUiSmallMarginTop"
                            >
                                <Button
                                    id="idButtonSignUp"
                                    text="Create Resource"
                                    press="onPressSignupBtn"
                                    class="onSignupClassBtn"
                                    type="Transparent"
                                />
                                <Button
                                    id="idchangequeue"
                                    text="Change Queue"
                                    type="Transparent"
                                />
                            </HBox>
                        </VBox>

                    </HBox>
                </VBox>
            </ScrollContainer>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>

