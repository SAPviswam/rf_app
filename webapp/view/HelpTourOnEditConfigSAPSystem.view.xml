<mvc:View
    controllerName="com.app.rfapp.controller.HelpTourOnEditConfigSAPSystem"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    height="100%">
    <NavContainer id="navContainer">
        <pages>
            <f:DynamicPage
                id="dynamicPage"
               
                stickySubheaderProvider="ShoppingCartWizard"
                class="sapUiNoContentPadding"
                showFooter="true">
                <!-- DynamicPage Title -->
                <f:title>
                    <f:DynamicPageTitle id="idDynamicPageTitle" >
                        <f:heading>
                     
                            <Title  id="idPageTitle_HelpTourOnEditConfigSAPSystem" class="headerTitleclass_HelpTourOnEditConfigSAPSystem"  text="Help document on Config SAP System" />
                   
                        </f:heading>
                    </f:DynamicPageTitle>
                </f:title>
                <!-- DynamicPage Header -->
                <f:content>
                  <ScrollContainer id="idScrollContainerIn_HelpTourOnEditConfigSAPSystem"

                height="100%"  
                width="100%"    
                horizontal="false"  
                vertical="true"    
                class="sapUiContentPadding"
                visible="true">
 
                <form:SimpleForm
                    id="idSimpleformIn_HelpTourOnEditConfigSAPSystem"
                    editable="true"
                >             
                <VBox id="idVbox1In_HelpTourOnEditConfigSAPSystem" >
                    <!-- Section: System Connection Configuration Fields -->
                    <Text id="idText01In_HelpTourOnEditConfigSAPSystem" text="1. System Connection Configuration fields:"  class="HeadingIn_HelpTourOnEditConfigSAPSystem"   />
                   
                    <Text id="idText02In_HelpTourOnEditConfigSAPSystem" text="Description:" class="SideHeadingIn_HelpTourOnEditConfigSAPSystem" />
                    <Text id="idText03In_HelpTourOnEditConfigSAPSystem" text="A brief, free-text description of the system entry. You can enter any text that helps you identify the connection. Note: Leave this field empty if you select the 'Description as System ID/Client' checkbox." />
                    <Text id="idText04In_HelpTourOnEditConfigSAPSystem" text="System ID:" class="SideHeadingIn_HelpTourOnEditConfigSAPSystem" />
                    <Text id="idText05In_HelpTourOnEditConfigSAPSystem" text="The unique identifier for the SAP system you wish to connect to. Enter the system ID (e.g., AKE, PRD, etc.)."  />
                    <Text id="idText06In_HelpTourOnEditConfigSAPSystem" text="Instance Number:" class="SideHeadingIn_HelpTourOnEditConfigSAPSystem" />
                    <Text id="idText07In_HelpTourOnEditConfigSAPSystem" text="Specify the instance number for the SAP system (e.g., 00, 01, etc.)." />
                    <Text id="idText08In_HelpTourOnEditConfigSAPSystem" text="Client:" class="SideHeadingIn_HelpTourOnEditConfigSAPSystem" />
                    <Text id="idText09In_HelpTourOnEditConfigSAPSystem" text="The SAP system client number (e.g., 100, 200, etc.) you want to connect to." />
                    <Text id="idText010In_HelpTourOnEditConfigSAPSystem" text="Application Server:" class="SideHeadingIn_HelpTourOnEditConfigSAPSystem" />
                    <Text id="idText011In_HelpTourOnEditConfigSAPSystem" text="The hostname or IP address of the SAP server you wish to connect to." />
                    <Text id="idText012In_HelpTourOnEditConfigSAPSystem" text="SAP Router String:" class="SideHeadingIn_HelpTourOnEditConfigSAPSystem" />
                    <Text  id="idText013In_HelpTourOnEditConfigSAPSystem" text="The SAP router string used for connecting to the SAP system, if applicable." />
                    <Text id="idText014In_HelpTourOnEditConfigSAPSystem" text="SAP Service:" class="SideHeadingIn_HelpTourOnEditConfigSAPSystem" />
                    <Text id="idText015In_HelpTourOnEditConfigSAPSystem" text="Specify the OData service that has been created for connecting to SAP." />
                    <Text id="idText016In_HelpTourOnEditConfigSAPSystem" text="Description as System ID/Client:" class="SideHeadingIn_HelpTourOnEditConfigSAPSystem" />
                    <Text id="idText017In_HelpTourOnEditConfigSAPSystem" text="If selected, the Description field will be automatically updated with the system ID and client number. Example: If the system ID is AKE and the client is 100, the description will be automatically set to 'AKE/100'." />
 
<Label id="idEmptyLabelIn_HTOECSS" width="5px"   />
 
                    <Text id="idText018In_HelpTourOnEditConfigSAPSystem" text="Action Buttons:" class="HeadingIn_HelpTourOnEditConfigSAPSystem" />
                    <Text id="idText019In_HelpTourOnEditConfigSAPSystem" text="Cancel:" class="SideHeadingIn_HelpTourOnEditConfigSAPSystem" />
                    <Text id="idText020In_HelpTourOnEditConfigSAPSystem" text="Clicking this button will take you back to the initial screen without saving any changes." />
                    <Text  id="idText021In_HelpTourOnEditConfigSAPSystem" text="Clear:" class="SideHeadingIn_HelpTourOnEditConfigSAPSystem" />
                    <Text id="idText022In_HelpTourOnEditConfigSAPSystem" text="Clicking this button will clear all the data in the input fields." />
                    <Text id="idText023In_HelpTourOnEditConfigSAPSystem" text="Save:" class="SideHeadingIn_HelpTourOnEditConfigSAPSystem" />
                    <Text id="idText024In_HelpTourOnEditConfigSAPSystem" text="Clicking this will save the configured system details (including the description) to the database. This will allow you to retrieve or edit the system details later." />
                    <Text id="idText025In_HelpTourOnEditConfigSAPSystem" text="Help:" class="SideHeadingIn_HelpTourOnEditConfigSAPSystem" />
                    <Text id="idText026In_HelpTourOnEditConfigSAPSystem" text="Clicking this will display an online help guide explaining the required fields, including examples and usage details for each input." />
<Label id="idEmptyLabel2In_HTOECSS" width="10px"   />
                    <Text id="idText027In_HelpTourOnEditConfigSAPSystem" text="2. Configure SAP System Screen:" class="HeadingIn_HelpTourOnEditConfigSAPSystem"  />
                    <Text id="idText028In_HelpTourOnEditConfigSAPSystem" text="Following is the Configure SAP system screen in CAPmodel RF. Path: Login to CAPmodel RF application >> Configure SAP system. The screen will appear." />
                    <Image
                    width="100%"
                    id="idGenImageHUQuery_HTOECSS"
                    src="../Images/ConfigSAPSystemScreen.png"
                />
<Label id="idEmptyLabel3In_HTOECSS" width="10px"   />
                    <Text id="idText029In_HelpTourOnEditConfigSAPSystem" text="3. How to Edit the SAP Configured System:" class="HeadingIn_HelpTourOnEditConfigSAPSystem"/>
                    <Text id="idText030In_HelpTourOnEditConfigSAPSystem" text="Steps to Edit System Configuration:" class="SideHeadingIn_HelpTourOnEditConfigSAPSystem"  />
                    <Text id="idText031In_HelpTourOnEditConfigSAPSystem" text="1. Locate the System Configuration:" class="SideHeadingIn_HelpTourOnEditConfigSAPSystem" />
                    <Text id="idText032In_HelpTourOnEditConfigSAPSystem" text="The user should navigate to the system management or SAP configuration screen where the list of previously configured SAP systems is displayed." />
                         <Image
                    width="100%"
                    id="idGenImage2HUQuery_HTOECSS"
                    src="../Images/ConfigSAPSystemScreen.png"
                />
                <Text id="idText033In_HelpTourOnEditConfigSAPSystem" text="Identify or select the system configuration you wish to edit and click on edit Button (using the system ID or description). "/>
                       <Image
                    width="100%"
                    id="idGenImage3_HTOECSS"
                    src="../Images/EditingSystem.png"
                />
                    <Text id="idText034In_HelpTourOnEditConfigSAPSystem" text="2. Click on Edit Option:" class="SideHeadingIn_HelpTourOnEditConfigSAPSystem" />
                    <Text id="idText035In_HelpTourOnEditConfigSAPSystem" text="Once the system entry is selected, there should be an 'Edit' button or option that allows you to modify the configuration details." />
                           <Image
                    width="100%"
                    id="idGenImage4_HTOECSS"
                    src="../Images/ConfigSAPDialog.png"
                />
                    <Text id="idText036In_HelpTourOnEditConfigSAPSystem" text="3. Edit Allowed Fields:" class="SideHeadingIn_HelpTourOnEditConfigSAPSystem" />
                    <Text id="idText037In_HelpTourOnEditConfigSAPSystem" text="When you Select a system and click on the Edit button, the form for editing the system configuration will be displayed."/>
 
 <Text id="idText038In_HelpTourOnEditConfigSAPSystem" text="The Client field will be displayed but disabled (locked from editing)" />
 <Text id="idText039In_HelpTourOnEditConfigSAPSystem" text="All other fields (System ID, Instance Number, Application Server, SAP Router String, SAP Service, and Description) will be enabled for editing."/>
                    <Text id="idText040In_HelpTourOnEditConfigSAPSystem" text="After making necessary changes to the editable fields, click Save to update the system configuration."/>
                    <Text id="idText041In_HelpTourOnEditConfigSAPSystem" text="If any of the editable fields have incorrect or missing data, the system should prompt the user to correct it before saving."/>
                    <Text id="idText042In_HelpTourOnEditConfigSAPSystem" text="Here I have changed the Description and System ID and save. "/>
                            <Image
                    width="100%"
                    id="idGenImage8_HTOECSS"
                    src="../Images/CurrentlyEditing.png"
                />
                    <Text id="idText043In_HelpTourOnEditConfigSAPSystem" text="Changes were Updated."/>
                                <Image
                    width="100%"
                    id="idGenImage07_HTOECSS"
                    src="../Images/ChangedSytem.png"
                />
                    <Text id="idText044In_HelpTourOnEditConfigSAPSystem" text="4. Save Changes:" class="SideHeadingIn_HelpTourOnEditConfigSAPSystem" />
                    <Text id="idText045In_HelpTourOnEditConfigSAPSystem" text="After making necessary changes to the editable fields, click Save to update the system configuration. If any of the editable fields have incorrect or missing data, the system should prompt the user to correct it before saving." />
                    <Text id="idText046In_HelpTourOnEditConfigSAPSystem" text="5. Client Field Check:" class="SideHeadingIn_HelpTourOnEditConfigSAPSystem" />
                    <Text id="idText047In_HelpTourOnEditConfigSAPSystem" text="If the user tries to modify the Client field (which should not be allowed)" />
                                     <Image
                    width="100%"
                    id="idGenImage006_HTOECSS"
                    src="../Images/client.png"
                />

<Label id="idEmptyLabel04In_HTOECSS" width="10px"/>
    <Text id="idText048In_HelpTourOnEditConfigSAPSystem" text="4. Sample Values:"  class="HeadingIn_HelpTourOnEditConfigSAPSystem" />
     
                   
                                <Image
                    width="100%"
                    id="idGenImage94_HTOECSS"
                    src="../Images/ConfigSAPDialog.png"
                />
                   
                    </VBox>
                </form:SimpleForm>
            </ScrollContainer>  
                </f:content>
                <!-- DynamicPage Footer -->
                <f:footer>
    <OverflowToolbar id="idOverFlowToolbarIn_HelpTourOnEditConfigSAPSystem">
        <!-- Spacer before the button to center it -->
        <ToolbarSpacer id="idToolbar1In_HelpTourOnEditConfigSAPSystem" />
       
        <!-- Back Button -->
        <Button
            id="idBackBtnIn_HelpTourOnEditConfigSAPSystem"
            text="Back"
            width="20%"
            press="onPressBackBtnIn_HelpTourOnEditConfigSAPSystem"
            class="BackInHelpTourOnEditConfigSAPSystem"
        />
       
        <!-- Spacer after the button to center it -->
        <ToolbarSpacer id="id1ToolbarIn_HelpTourOnEditConfigSAPSystem" />
    </OverflowToolbar>
</f:footer>
            </f:DynamicPage>
           
        </pages>
    </NavContainer>
</mvc:View>
 
 