<mvc:View
    xmlns:form="sap.ui.layout.form"
    controllerName="com.app.rfapp.controller.StockBinQueryByProduct"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:ndc="sap.ndc"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    height="100%"
>
    <tnt:ToolPage id="idToolPageSBQP">
        <tnt:header>
            <tnt:ToolHeader id="idtntToolHeaderSBQP">
                <Button
                    id="idSBQPfirstbackbtn"
                    icon="sap-icon://nav-back"
                    press="onSBQPfirstBackBtnPress"
                    visible="true"
                />
                <Button
                    id="idSBQPSecondbackbtn"
                    icon="sap-icon://nav-back"
                    press="onSBQPSecondBackBtnPress"
                    visible="false"
                />
                <Image
                    id="_IDGenImage1SBQP"
                    height="1.5rem"
                    class="sapUiSmallMarginBegin"
                    src="https://artihcus.com/assets/img/AG-logo.png"
                />
                <tnt:ToolHeaderUtilitySeparator
                    id="idToolHeaderUtilitySeparatorSBQP"
                />
                <ToolbarSpacer id="idToolbarSpacerSBQP">
                    <layoutData>
                        <OverflowToolbarLayoutData
                            id="idOverflowToolbarLayoutData1SBQP"
                            priority="NeverOverflow"
                            minWidth="20px"
                        />
                    </layoutData>
                </ToolbarSpacer>
                <Avatar
                    id="_IDGenAvatar1SBQP"
                    displaySize="XS"
                    press="onSBQPAvatarPressed"
                    tooltip="Profile"
                />
            </tnt:ToolHeader>
        </tnt:header>
        <tnt:mainContents>
            <ScrollContainer
                id="idSBQPFirstSC"
                horizontal="false"
                vertical="true"
                height="100%"
                class="sapUiContentPadding"
                visible="true"
            >
                <HBox
                    id="idSBQPHbox"
                    class="sapUiMediumMargin"
                >
                    <Label
                        id="idSBQProductLabel"
                        text="Product"
                        width="70px"
                    />
                    <Input
                        id="idSBQProductInput"
                        value=""
                        liveChange="onSBQProductLiveChange"
                    />
                    <Button
                        id="idSBQProductScannerBtn"
                        icon="sap-icon://bar-code"
                        press="onSBQProductBarcodeScanner"
                    />
                </HBox>
            </ScrollContainer>
            <ScrollContainer
                id="idSBQPsecondSC"
                horizontal="false"
                vertical="true"
                height="100%"
                class="sapUiContentPadding"
                visible="false"
            >
            <VBox >
               <Text text="Hiii"/> 
               </VBox>
            </ScrollContainer>
            <ScrollContainer
                id="idthirdProductP2age"
                horizontal="false"
                vertical="true"
                height="100%"
                class="sapUiContentPadding"
                visible="false"
            >
               
            </ScrollContainer>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>
