<mvc:View
    controllerName="com.app.rfapp.controller.HuQuery"
    xmlns:unified="sap.ui.unified"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:ndc="sap.ndc"
    xmlns:cssgrid="sap.ui.layout.cssgrid"
    xmlns:vbm="sap.ui.vbm"
    xmlns:controls="sap.viz.ui5.controls"
    xmlns:commons="sap.suite.ui.commons"
    xmlns:simple="sap.gantt.simple"
    xmlns:launchpad="sap.ushell.ui.launchpad"
    xmlns:uxap="sap.uxap"
    xmlns="sap.m"
    displayBlock="true"
    xmlns:tnt="sap.tnt"
>
    <tnt:ToolPage id="_IDGenPage1">
        <tnt:header>
            <tnt:ToolHeader id="idtntToolHeaderHuQuery">
                <!-- Artihcus logo -->
                <Image
                    id="_IDGenImageHUQuery"
                    height="1.5rem"
                    class="sapUiSmallMarginBegin"
                    src="https://artihcus.com/assets/img/AG-logo.png"
                />

                <!-- title -->

                <Title
                    id="idTitle_HuQuery"
                    class="title"
                    text="CAPmodel RF"
                />
                <tnt:ToolHeaderUtilitySeparator
                    id="idToolHeaderUtilitySeparatorAdhocHuquery"
                />
                <ToolbarSpacer id="idToolbarSpacerAdhocHQuery">
                    <layoutData>
                        <OverflowToolbarLayoutData
                            id="idOverflowToolbarLayoutDataAdhocHuquery"
                            priority="NeverOverflow"
                            minWidth="20px"
                        />
                    </layoutData>
                </ToolbarSpacer>
                <!-- avatar -->
                <Avatar
                    id="_IDGenAvatarAdhocHuquery"
                    displaySize="XS"
                    press="onAvatarPressed"
                    tooltip="Profile"
                />
            </tnt:ToolHeader>
        </tnt:header>
        <tnt:mainContents>
            <!-- first scroll container -->
            <ScrollContainer
                id="idFirstSc_HuQuery"
                horizontal="false"
                vertical="true"
                height="100%"
                class="sapUiContentPadding"
                visible="true"
            >
                <VBox
                    id="idFirstScVbox1_Huquery"
                    alignItems="Center"
                    justifyContent="Center"
                    class="centerContent"
                >
                    <f:SimpleForm
                        id="idFirstScsimpleForm1_HuQuery"
                        layout="ResponsiveGridLayout"
                        editable="true"
                        class="sapUiResponsiveMargin"
                        labelSpanL="3"
                        labelSpanM="3"
                        emptySpanL="4"
                        emptySpanM="4"
                        columnsL="1"
                        columnsM="1"
                    >
                        <VBox
                            id="idFirstScVbox1_HuQuery"
                            alignContent="Center"
                            alignItems="Center"
                        >
                            <HBox
                                id="idFirstScHbox1_HuQuery"
                                justifyContent="Start"
                            >
                                <!-- Scan HU Label -->
                                <Text
                                    id="idScanHuLabel_HuQuery"
                                    text="Scan HU :"
                                    width="70px"
                                />
                                <!-- Input Field -->
                                <Input
                                    id="idScanHuInput_HuQuery"
                                    placeholder="Enter HU..."
                                    class="sapUiTinyMarginBegin"
                                    liveChange="onLiveHuValidation"
                                />
                            </HBox>
                            <HBox id="idFirstScHbox2_HuQuery">
                                <Button
                                    id="idFirstBackBtn_HuQuery"
                                    text="Back"
                                    class="sapUiTinyMargin"
                                    press="onPressBackButtonFirstSC"
                                    type="Emphasized"
                                />
                                <ndc:BarcodeScannerButton
                                    id="sampleBarcodeScannerButton"
                                    scanSuccess="onScanSuccess"
                                    class="sapUiTinyMargin"
                                    scanFail="onScanError"
                                    inputLiveUpdate="onScanLiveupdate"
                                    dialogTitle="Barcode Scanner Button Sample"
                                />
                            </HBox>
                        </VBox>
                    </f:SimpleForm>
                </VBox>
            </ScrollContainer>

            <!--Second Scroll Container for HU Details -->
            <ScrollContainer
                id="idSecondSc_HuQuery"
                horizontal="false"
                vertical="true"
                height="100%"
                class="sapUiContentPadding"
                visible="false"
            >
                <VBox
                    id="idSecScVbox1_HuQuery"
                    alignContent="Center"
                    alignItems="Center"
                >
                    <f:SimpleForm
                        id="idSecScsimpleForm_HuQuery"
                        layout="ResponsiveGridLayout"
                        editable="true"
                        columnsL="2"
                        columnsM="1"
                    >
                        <VBox
                            id="idSecScVbox2_HuQuery"
                            justifyContent="Start"
                        >
                            <!-- HU Number Field -->
                            <HBox id="idSecScHbox1_HuQuery">
                                <Text
                                    id="idHuLabel_HuQuery"
                                    text="HU:"
                                    width="50px"
                                />
                                <Input
                                    id="idHuInput_HuQuery"
                                    placeholder="HU Number..."
                                    maxLength="25"
                                    width="150px"
                                />
                            </HBox>

                            <!-- packing material  Hu Type-->
                            <HBox id="idSecScHbox3_HuQuery">
                                <Text
                                    id="idPackagingMaterialLabel_HuQuery"
                                    text="PKMT:"
                                    width="50px"
                                />
                                <Input
                                    id="idPackagingMaterialInput_HuQuery"
                                    placeholder="Packaging Material"
                                    width="150px"
                                />

                                <Text
                                    id="idEmptyLabel_HuQuery"
                                    width="10px"
                                />
                                <Text
                                    id="idHuTypeLabel_HuQuery"
                                    text="Htype:"
                                    width="50px"
                                />
                                <Input
                                    id="idHuTypeInput_HuQuery"
                                    placeholder="Enter HU Type..."
                                    maxLength="25"
                                    width="150px"
                                />
                            </HBox>
  <!-- Location and Action Buttons -->
                            <HBox id="idSecScHbox7_HuQuery">
                                <Text
                                    id="idLocationLabel_HuQuery"
                                    text="Bin:"
                                    width="50px"
                                />
                                <Input
                                    id="idLocInput_HuQuery"
                                    placeholder="Enter Location..."
                                    width="150px"
                                />
                                <Text
                                    id="idEmptyText_HuQuery"
                                    width="10px"
                                />
                                <Text
                                    id="idCGrpLabel_HuQuery"
                                    text="CGrp:"
                                    width="50px"
                                />
                                <Input
                                    id="idCGrpInput_HuQuery"
                                    placeholder="Enter cgrp..."
                                    width="150px"
                                />
                            </HBox>
                            <HBox id="idSecScHbox2_HuQuery">
                                <Text
                                    id="idTotalWeightLabel_HuQuery"
                                    text="TotW:"
                                    width="50px"
                                />
                                <Input
                                    id="idTotalWeightInput_HuQuery"
                                    placeholder="Total Weight"
                                    maxLength="25"
                                    width="100px"
                                />
                                <Input
                                    id="idTotalWeightInput2_HuQuery"
                                    width="50px"
                                />

                                <Text
                                    id="idEmpLabel2_HuQuery"
                                    width="10px"
                                />
                                <Text
                                    id="idVolumeLabel_HuQuery"
                                    text="TotV:"
                                    width="50px"
                                />
                                <Input
                                    id="idVolumeInput_HuQuery"
                                    placeholder="Enter Volume..."
                                    width="100px"
                                />
                                <Input
                                    id="idVolumeInput2_HuQuery"
                                    width="50px"
                                />
                            </HBox>
                            <HBox id="idSecScHbox8_HuQuery">
                                <Text
                                    id="idTarWeightLabel_HuQuery"
                                    text="TarW:"
                                    width="50px"
                                />
                                <Input
                                    id="idTarWeightInput_HuQuery"
                                    placeholder="tarW"
                                    maxLength="25"
                                    width="100px"
                                />

                                <Text
                                    id="idEmpLabel4_HuQuery"
                                    width="10px"
                                />
                                <Text
                                    id="idTarVolumeLabel_HuQuery"
                                    text="TarV:"
                                    width="50px"
                                />
                                <Input
                                    id="idTarVInput_HuQuery"
                                    placeholder="Tar Volume"
                                    width="100px"
                                />
                            </HBox>

                             <HBox id="idSecScHbox6_HuQuery">
                                <Text
                                    id="idMaxWeightLabel_HuQuery"
                                    text="MaxW:"
                                    width="50px"
                                />
                                <Input
                                    id="idMaxWeightInput_HuQuery"
                                    placeholder="MaxW"
                                    maxLength="25"
                                    width="100px"
                                />

                                <Text
                                    id="idEmpLabel3_HuQuery"
                                    width="10px"
                                />
                                <Text
                                    id="idMaxVolumeLabel_HuQuery"
                                    text="MaxV:"
                                    width="50px"
                                />
                                <Input
                                    id="idmaxVInput_HuQuery"
                                    placeholder="Max Volume."
                                    width="100px"
                                />
                            </HBox>
                          
                            <HBox
                                id="idSecScHbox4_HuQuery"
                                justifyContent="Start"
                                class="gapBetweenInputs"
                            >
                                <!-- Length Input -->

                                <Text
                                    id="idLengthLabel_HuQuery"
                                    text="L:"
                                    width="20px"
                                />
                                <Input
                                    id="idLenInput_HuQuery"
                                    placeholder="Enter Length..."
                                    maxLength="3"
                                    width="80px"
                                    class="sapUiTinyMarginEnd"
                                />
                                <!-- width -->
                                <Text
                                    id="idWidthLabel_HuQuery"
                                    text="W:"
                                    width="20px"
                                />
                                <Input
                                    id="idWidthInput_HuQuery"
                                    placeholder="Enter Width..."
                                    maxLength="3"
                                    width="80px"
                                    class="sapUiTinyMarginEnd"
                                />

                                <!-- Height Input -->

                                <Text
                                    id="idHeightLabel_HuQuery"
                                    text="H:"
                                    width="20px"
                                />
                                <Input
                                    id="idHeightInput_HuQuery"
                                    placeholder="Enter Height..."
                                    maxLength="3"
                                    width="80px"
                                    class="sapUiTinyMarginEnd"
                                />

                                <!-- Height Measurements -->

                                <Text
                                    id="idUnitsLabel_HuQuery"
                                    text="Units:"
                                    width="40px"
                                />
                                <Input
                                    id="idUnitsInput_HuQuery"
                                    placeholder=""
                                    maxLength="13"
                                    width="40px"
                                />
                            </HBox>

                          

                            <VBox
                                id="idSecScVbox3_HuQuery"
                                justifyContent="Center"
                                alignContent="Center"
                                alignItems="Center"
                            >
                                <!-- HU Content and HU Hierarchy Buttons -->
                                <HBox id="idSecScHBox8_HuQuery">
                                    <Button
                                        id="idSecBackBtn_HuQuery"
                                        type="Emphasized"
                                        text="Back"
                                        press="onPressBackButtonSecondSC"
                                        class="sapUiTinyMarginEnd"
                                    />
                                    <Button
                                        id="idHuContentBtn_HuQuery"
                                        text="HU Content"
                                        press="onHUContentPress"
                                        class="sapUiTinyMarginEnd"
                                    />
                                    <Button
                                        id="idHuHierarchyBtn_HuQuery"
                                        text="HU Hierarchy"
                                        press="onHUHierarchyPress"
                                        class="sapUiTinyMarginEnd"
                                    />
                                </HBox>
                            </VBox>
                        </VBox>
                    </f:SimpleForm>
                </VBox>
            </ScrollContainer>

            <!-- Scroll Container for HU Details Table -->
            <ScrollContainer
                id="idThirdSc_HuQuery"
                horizontal="true"
                vertical="true"
                height="100%"
                class="sapUiContentPadding"
                visible="false"
            >
                <HBox
                    id="idHbox1ThirdSc_HuQuery"
                    class="floatingTitle"
                    justifyContent="End"
                >
                    <Button
                        id="idThirdBackBtn_HuQuery"
                        text="Back"
                        press="onPressBackButtonThirdSC"
                        type="Emphasized"
                    />
                </HBox>
                <Table
                    id="HuDetailsTable_HuQuery"
                    inset="false"
                    growing="true"
                    width="100%"
                    growingScrollToLoad="true"
                    mode="None"
                >
                    <headerToolbar>
                        <OverflowToolbar id="idOverflowToolBar_HuQuery">
                            <ToolbarSpacer id="idTableHeaderSpacer2" />

                            <layoutData>
                                <OverflowToolbarLayoutData
                                    id="idOverflowToolbarLayoutData_Huquery"
                                    priority="NeverOverflow"
                                />
                            </layoutData>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column
                            id="idSnoColumn_HuQuery"
                            width="12%"
                        >
                            <Text
                                id="idSnoText_HuQuery"
                                text="S.No"
                            />
                        </Column>
                        <Column id="idProductCol_HuQuery">
                            <Text
                                id="idProductText_HuQuery"
                                text="Product"
                            />
                        </Column>
                        <Column id="idQuanCol_HuQuery">
                            <Text
                                id="idQuanText_HuQuery"
                                text="Quantity"
                            />
                        </Column>
                        <Column id="idUomCol_HuQuery">
                            <Text
                                id="idUomText_HuQuery"
                                text="UOM"
                            />
                        </Column>
                        <Column id="idPrDesCol_HuQuery">
                            <Text
                                id="idPrDesText_HuQuery"
                                text="Product Description"
                            />
                        </Column>
                    </columns>

                    <items>
                        <ColumnListItem id="idColListItem_HuQuery">
                            <cells>
                                <Text
                                    id="idSerialNoText_HuQuery"
                                    text="{serialNo}"
                                />
                                <Text
                                    id="idProdText_HuQuery"
                                    text="{product}"
                                />
                                <Text
                                    id="idQuantityText_HuQuery"
                                    text="{quantity}"
                                />
                                <Text
                                    id="idUOmText_HuQuery"
                                    text="{uom}"
                                />
                                <Text
                                    id="idProdDescText_HuQuery"
                                    text="{productDescription}"
                                />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </ScrollContainer>

            <!-- Scroll Container for Hierarchy Table -->
            <ScrollContainer
                id="idFourthSc_HuQuery"
                horizontal="true"
                vertical="true"
                height="100%"
                class="sapUiContentPadding"
                visible="false"
            >
                <HBox
                    id="idHbox1FourthSc_HuQuery"
                    class="floatingTitle"
                    justifyContent="End"
                >
                    <Button
                        id="idFourthBackBtn_HuQuery"
                        text="Back"
                        class=""
                        press="onPressBackButtonFourthSC"
                        type="Emphasized"
                    />
                </HBox>

                <Table
                    id="idSimpleTable_HuQuery"
                    inset="false"
                    growing="true"
                    growingScrollToLoad="true"
                    mode="SingleSelectMaster"
                    selectionChange="onSelectParticularWT"
                >
                    <headerToolbar>
                        <OverflowToolbar id="idOverflowToolbar_HuQuery">
                            <ToolbarSpacer id="idToolbarSpacer_HuQuery" />

                            <layoutData>
                                <OverflowToolbarLayoutData
                                    id="idOverflowToolbarLayoutData_HuQuery"
                                    priority="NeverOverflow"
                                />
                            </layoutData>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column id="idColumn_HuQuery">
                            <header>
                                <Text
                                    id="idSnoLabel_HuQuery"
                                    text="S.No"
                                />
                            </header>
                        </Column>
                        <Column id="idHlHu_HuQuery">
                            <header>
                                <Text
                                    id="idHlHuLabel_HuQuery"
                                    text="Higher Level HU"
                                />
                            </header>
                        </Column>
                        <Column id="idHlestHu_HuQuery">
                            <header>
                                <Text
                                    id="idHlestHuLabel_HuQuery"
                                    text="Highest Level HU"
                                />
                            </header>
                        </Column>
                    </columns>

                    <items>
                        <ColumnListItem
                            id="idColumListItem_HuQuery"
                            navigated="true"
                        >
                            <cells>
                                <Text
                                    id="idSrnoText_HuQuery"
                                    text="{serialNo}"
                                />
                                <Text
                                    id="idHlhu_HuQuery"
                                    text="{higherLevelHU}"
                                />
                                <Text
                                    id="idHstHu_HuQuery"
                                    text="{highestLevelHU}"
                                />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </ScrollContainer>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>
