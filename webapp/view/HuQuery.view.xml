<mvc:View
    controllerName="com.app.rfapp.controller.HuQuery"
    xmlns:unified="sap.ui.unified"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:ndc="sap.ndc"
    xmlns:cssgrid="sap.ui.layout.cssgrid"
    xmlns:vbm="sap.ui.vbm"
    xmlns:controls="sap.viz.ui5.controls"
    xmlns:commons="sap.suite.ui.commons"
    xmlns:simple="sap.gantt.simple"
    xmlns:launchpad="sap.ushell.ui.launchpad"
    xmlns:uxap="sap.uxap"
    xmlns="sap.m"
    displayBlock="true"
    xmlns:tnt="sap.tnt"
>
    <tnt:ToolPage id="_IDGenPage1">
        <tnt:header>
            <tnt:ToolHeader id="idtntToolHeaderHuQuery">
              <!-- Artihcus logo -->
                <Image
                    id="_IDGenImageHUQuery"
                    height="1.5rem"
                    class="sapUiSmallMarginBegin"
                    src="https://artihcus.com/assets/img/AG-logo.png"
                />
                <!-- title -->
                 <Title
                    id="idTitle_HuQuery"
                    class="title"
                    text="CAPmodel RF"
                />
                <tnt:ToolHeaderUtilitySeparator
                    id="idToolHeaderUtilitySeparatorAdhocHuquery"
                />
                <ToolbarSpacer id="idToolbarSpacerAdhocHQuery">
                    <layoutData>
                        <OverflowToolbarLayoutData
                            id="idOverflowToolbarLayoutDataAdhocHuquery"
                            priority="NeverOverflow"
                            minWidth="20px"
                        />
                    </layoutData>
                </ToolbarSpacer>
                <!-- avatar -->
                <Avatar
                    id="_IDGenAvatarAdhocHuquery"
                    displaySize="XS"
                    press="onAvatarPressed"
                    tooltip="Profile"
                />
            </tnt:ToolHeader>
        </tnt:header>
        <tnt:mainContents>
        <!-- first scroll container -->
            <ScrollContainer
                id="idFirstSc_HuQuery"
                horizontal="false"
                vertical="true"
                height="100%"
                class="sapUiContentPadding"
                visible="true"
            >
                <VBox
                    id="idFirstScVbox1_Huquery"
                    alignItems="Center"
                    justifyContent="Center"
                    class="centerContent"
                >
                    <f:SimpleForm
                        id="idFirstScsimpleForm1_HuQuery"
                        layout="ResponsiveGridLayout"
                        editable="true"
                        class="sapUiResponsiveMargin"
                        labelSpanL="3"
                        labelSpanM="3"
                        emptySpanL="4"
                        emptySpanM="4"
                        columnsL="1"
                        columnsM="1"
                    >
                    <VBox id="idFirstScVbox1_HuQuery" alignContent="Center" alignItems="Center" >
                        <HBox
                            id="idFirstScHbox1_HuQuery"
                            justifyContent="Start"
                        >
                            <!-- Scan HU Label -->
                            <Label
                                id="idScanHuLabel_HuQuery"
                                text="Scan HU :"
                                class="ScanHumargin"
                               
                            />
                            <!-- Input Field -->
                            <Input
                                id="idScanHuInput_HuQuery"
                                placeholder="Enter HU..."
                                class="sapUiTinyMarginBegin"
                                liveChange="onLiveHuValidation"
                                change="onChangeHuValidation"
                            />
                           
                        </HBox>
                        <HBox id="idFirstScHbox2_HuQuery" >
                         <Button id="idFirstBackBtn_HuQuery" text="Back"   class="sapUiTinyMargin" press="onPressBackButtonFirstSC" type="Emphasized"></Button>
                         <ndc:BarcodeScannerButton
                                id="sampleBarcodeScannerButton_HuQuery"
                                scanSuccess="onScanSuccess"
                                scanFail="onScanError"
                                inputLiveUpdate="onScanLiveupdate"
                                dialogTitle="Barcode Scanner"
                                class="sapUiTinyMargin"
                            />
                       
                       
                        </HBox>
                        </VBox>
                    </f:SimpleForm>
                </VBox>
               
            </ScrollContainer>
 
            <!--Second Scroll Container for HU Details -->
            <ScrollContainer
                id="idSecondSc_HuQuery"
                horizontal="false"
                vertical="true"
                height="100%"
                class="sapUiContentPadding"
                visible="false"
            >
            <VBox id="idSecScVbox1_HuQuery" alignContent="Center" alignItems="Center" >
                <f:SimpleForm
                    id="idSecScsimpleForm_HuQuery"
                    layout="ResponsiveGridLayout"
                    editable="true"
                    columnsL="2"
                    columnsM="1"
                >
                 <VBox id="idSecScVbox2_HuQuery" justifyContent="Start" >
                    <!-- HU Number Field -->
                    <HBox id="idSecScHbox1_HuQuery">
                    <Label
                        id="idHuLabel_HuQuery"
                        text="HU:"
                        class="sapUiTinyMarginTop"
                        width="4rem"
                       
                    />
                    <Input
                        id="idHuInput_HuQuery"
                        placeholder="HU Number..."
                        maxLength="25"
                        width="200px"
                       
                    />
                    </HBox>
 
                    <!-- HU Type Field -->
                     <HBox id="idSecScHbox2_HuQuery" >
                    <Label
                        id="idHuTypeLabel_HuQuery"
                        text="HU Type:"
                        class="sapUiTinyMarginTop"
                         width="70px"
                    />
                    <Input
                        id="idHuTypeInput_HuQuery"
                        placeholder="Enter HU Type..."
                        maxLength="25"
                        width="200px"
                    />
                     </HBox>
 
                     <!-- packing material -->
                      <HBox id="idSecScHbox3_HuQuery">
                    <Label
                        id="idPackagingMaterialLabel_HuQuery"
                        text="PKMT:"
                        class="sapUiTinyMarginTop"
                        width="70px"
                    />
                    <Input
                        id="idPackagingMaterialInput_HuQuery"
                        placeholder="Packaging Material"
                        maxLength="25"
                        width="200px"
                    />
                     </HBox>
                   
                    <HBox
                        id="idSecScHbox4_HuQuery"
                        justifyContent="Start"
                        class="gapBetweenInputs"
                    >
                   
                        <!-- Length Input -->
 
                            <Label
                                id="idLengthLabel_HuQuery"
                                text="L:"
                                 class="sapUiTinyMarginTop"
                                 
                            />
                            <Input
                                id="idLenInput_HuQuery"
                                placeholder="Enter Length..."
                                maxLength="3"
                                width="80px"
                                class="sapUiTinyMarginEnd"
                            />
                       <!-- width -->
                            <Label
                                id="idWidthLabel_HuQuery"
                                text="W:"
                               class="sapUiTinyMarginTop"
                            />
                            <Input
                                id="idWidthInput_HuQuery"
                                placeholder="Enter Width..."
                                maxLength="3"
                                width="80px"
                                class="sapUiTinyMarginEnd"
                            />
                       
                        <!-- Height Input -->
                 
                            <Label
                                id="idHeightLabel_HuQuery"
                                text="H:"
                               class="sapUiTinyMarginTop"
                            />
                            <Input
                                id="idHeightInput_HuQuery"
                                placeholder="Enter Height..."
                                maxLength="3"
                                width="80px"
                                class="sapUiTinyMarginEnd"
                            />
                     
                        <!-- Height Measurements -->
               
                            <Label
                                id="idUnitsLabel_HuQuery"
                                text="Units:"
                               class="sapUiTinyMarginTop"
                            />
                            <Input
                                id="idUnitsInput_HuQuery"
                                placeholder=""
                                maxLength="13"
                                width="40px"
                            />
                   
                    </HBox>
 
                   
                    <HBox
                        id="idSecScHbox5_HuQuery"
                        justifyContent="Start"
                        class="gapBetweenInputs"
                    >
                     
                        <!-- Tare Weight Input -->
                     
                            <Label
                                id="idTareWtLabel_HuQuery"
                                text="Tw:"
                                class="sapUiTinyMarginTop"
                            />
                            <Input
                                id="idTareWtInput_HuQuery"
                                placeholder="Tare wt..."
                                maxLength="3"
                                width="80px"
                                class="sapUiTinyMarginEnd"
                            />
                   
                        <!-- Net Weight Input -->
                 
                            <Label
                                id="idNetWtLabel_HuQuery"
                                text="Nw:"
                               class="sapUiTinyMarginTop"
                            />
                            <Input
                                id="idNetWtInput_HuQuery"
                                placeholder="Net wt..."
                                maxLength="3"
                                width="80px"
                                class="sapUiTinyMarginEnd"
                            />
                       
                        <!-- Gross Weight Input -->
                       
                            <Label
                                id="idGwLabel_HuQuery"
                                text="Gw:"
                               class="sapUiTinyMarginTop"
                            />
                            <Input
                                id="idGWtInput_HuQuery"
                                placeholder="Gross wt..."
                                maxLength="3"
                                width="80px"
                                class="sapUiTinyMarginEnd"
                            />
                     
                        <!-- Weight Measurements -->
     
                            <Label
                                id="idUnotsLabel_HuQuery"
                                text="Units:"
                                class="sapUiTinyMarginTop"
                            />
                            <Input
                                id="idUnitInput_HuQuery"
                                placeholder=""
                                maxLength="13"
                                width="40px"
                            />
                    </HBox>
 
                    <HBox id="idSecScHbox6_HuQuery">
                    <Label
                        id="idVolumeLabel_HuQuery"
                        text="Volume:"
                        class="sapUiTinyMarginTop"
                        width="70px"
                    />
                    <Input
                        id="idVolumeInput_HuQuery"
                        placeholder="Enter Volume..."
                        width="200px"
                    />
 </HBox>
                    <!-- Location and Action Buttons -->
                  <HBox id="idSecScHbox7_HuQuery">
                    <Label
                        id="idLocationLabel_HuQuery"
                        text="Location:"
                        class="sapUiTinyMarginTop"
                        width="70px"
                    />
                     <Input
                            id="idLocInput_HuQuery"
                            placeholder="Enter Location..."
                            width="200px"
                        />
                    </HBox>
                    <VBox id="idSecScVbox3_HuQuery">
                       
                        <!-- HU Content and HU Hierarchy Buttons -->
                        <HBox id="idSecScHBox8_HuQuery">
                         <Button
                                id="idSecBackBtn_HuQuery"
                                type="Emphasized"
                                text="Back"
                                press="onPressBackButtonSecondSC"
                                 class="sapUiTinyMarginEnd"
                            />
                            <Button
                                id="idHuContentBtn_HuQuery"
                                text="HU Content"
                                press="onHUContentPress"
                                class="sapUiTinyMarginEnd"
                            />
                            <Button
                                id="idHuHierarchyBtn_HuQuery"
                                text="HU Hierarchy"
                                press="onHUHierarchyPress"
                                class="sapUiTinyMarginEnd"
                            />
                           
                        </HBox>
                    </VBox>
                      </VBox>
                </f:SimpleForm>
                </VBox>
            </ScrollContainer>
 
      <!-- Scroll Container for HU Details Table -->
            <ScrollContainer
                id="idThirdSc_HuQuery"
                horizontal="false"
                vertical="true"
                height="100%"
                class="sapUiContentPadding"
                visible="false"
            >
         
                <Table
                    id="HuDetailsTable_HuQuery"
                    inset="false"
                    growing="true"
                    growingScrollToLoad="true"
                    mode="None"
                >
                <headerToolbar>
                                <OverflowToolbar id="idOverflowToolBar_HuQuery">
                                   
                                    <ToolbarSpacer id="idTableHeaderSpacer2" />
                                   
                                        <layoutData>
                                            <OverflowToolbarLayoutData
                                                id="idOverflowToolbarLayoutData_Huquery"
                                                priority="NeverOverflow"
                                            />
                                        </layoutData>
                                 
                                   
                                    <Button
                                         id="idThirdBackBtn_HuQuery"
                                       
                                        text="Back" press="onPressBackButtonThirdSC" type="Emphasized"
                                       
                                     
                                    />
                                   
                                 
                                </OverflowToolbar>
                            </headerToolbar>
                    <columns>
                        <Column
                            id="idSnoColumn_HuQuery"
                            width="12%"
                        >
                            <Text
                                id="idSnoText_HuQuery"
                                text="S.No"
                            />
                        </Column>
                        <Column id="idProductCol_HuQuery">
                            <Text
                                id="idProductText_HuQuery"
                                text="Product"
                            />
                        </Column>
                        <Column id="idQuanCol_HuQuery">
                            <Text
                                id="idQuanText_HuQuery"
                                text="Quantity"
                            />
                        </Column>
                        <Column id="idUomCol_HuQuery">
                            <Text
                                id="idUomText_HuQuery"
                                text="UOM"
                            />
                        </Column>
                        <Column id="idPrDesCol_HuQuery">
                            <Text
                                id="idPrDesText_HuQuery"
                                text="Product Description"
                            />
                        </Column>
                    </columns>
 
                    <items>
                        <ColumnListItem id="idColListItem_HuQuery">
                            <cells>
                                <Text
                                    id="idSerialNoText_HuQuery"
                                    text="{serialNo}"
                                />
                                <Text
                                    id="idProdText_HuQuery"
                                    text="{product}"
                                />
                                <Text
                                    id="idQuantityText_HuQuery"
                                    text="{quantity}"
                                />
                                <Text
                                    id="idUOmText_HuQuery"
                                    text="{uom}"
                                />
                                <Text
                                    id="idProdDescText_HuQuery"
                                    text="{productDescription}"
                                />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </ScrollContainer>
 
            <!-- Scroll Container for Hierarchy Table -->
            <ScrollContainer
                id="idFourthSc_HuQuery"
                horizontal="false"
                vertical="true"
                height="100%"
                class="sapUiContentPadding"
                visible="false"
            >
                <Table
                    id="idSimpleTable_HuQuery"
                    inset="false"
                   
                    growing="true"
                    growingScrollToLoad="true"
                   mode="SingleSelectMaster"
                    selectionChange="onSelectParticularWT"
                >
                 <headerToolbar>
                                <OverflowToolbar id="idOverflowToolbar_HuQuery">
                                   
                                    <ToolbarSpacer id="idToolbarSpacer_HuQuery" />
                                   
                                        <layoutData>
                                            <OverflowToolbarLayoutData
                                                id="idOverflowToolbarLayoutData_HuQuery"
                                                priority="NeverOverflow"
                                            />
                                        </layoutData>
                                 
                                   
                                    <Button
                                    id="idFourthBackBtn_HuQuery"
                                       
                                        text="Back" press="onPressBackButtonFourthSC"
                                       type="Emphasized"
                                     
                                    />
                                   
                                 
                                </OverflowToolbar>
                            </headerToolbar>
                    <columns>
                        <Column id="idColumn_HuQuery">
                            <header>
                                <Label
                                    id="idSnoLabel_HuQuery"
                                    text="S.No"
                                />
                            </header>
                        </Column>
                        <Column id="idHlHu_HuQuery">
                            <header>
                                <Label
                                    id="idHlHuLabel_HuQuery"
                                    text="Higher Level HU"
                                />
                            </header>
                        </Column>
                        <Column id="idHlestHu_HuQuery">
                            <header>
                                <Label
                                    id="idHlestHuLabel_HuQuery"
                                    text="Highest Level HU"
                                />
                            </header>
                        </Column>
                    </columns>
 
                    <items>
                        <ColumnListItem id="idColumListItem_HuQuery" navigated="true">
                            <cells >
                                <Text
                                    id="idSrnoText_HuQuery"
                                    text="{serialNo}"
                                />
                                <Text
                                    id="idHlhu_HuQuery"
                                    text="{higherLevelHU}"
                                />
                                <Text
                                    id="idHstHu_HuQuery"
                                    text="{highestLevelHU}"
                                />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </ScrollContainer>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>
 
 